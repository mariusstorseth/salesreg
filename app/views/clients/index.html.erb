<div class="page-header">
  <h2>Clients</h2>
</div>

<div class="table-responsive">
<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Client name</th>
      <th>Margin</th>
      <th>Revenue</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client(client) %></td>
        <td><%= client.sales.sum(:margin) %></td>
        <td><%= client.sales.sum(:revenue) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= link_to 'New Client', new_client_path %>
