<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="page-header">
      <h2>Sign in</h2>
    </div>

    <%= form_tag user_sessions_path, :class => "form-horizontal" do %>

      <div class="form-group">
        <%= label_tag :email, "Email address", :class => "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= text_field_tag :email, params[:email], placeholder: "Email", :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :password, "Password", :class => "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= password_field_tag :password, nil, placeholder: "Password", :class => "form-control" %>
        </div>
      </div>

      <div class="checkbox col-md-offset-3 col-md-9">
        <label>
          <%= check_box_tag :remember_me, 1, params[:remember_me] %> Remember me
        </label>
      </div>
      <div class="col-sm-offset-3 col-md-9">
        <%= submit_tag "Sign in", :class => "btn btn-primary" %>
        <%= link_to "Forgot password?", new_password_reset_path, :class => "pull-right" %>
      </div>
    <% end %>
  </div>
</div>

