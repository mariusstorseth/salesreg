<h1>Listing offices</h1>

<table>
  <thead>
    <tr>
      <th>Office</th>
      <th>Budget</th>
      <th>Current margin</th>
      <th>Current revenue</th>
      <th>Margin in pipeline</th>
      <th>Revenue in pipeline</th>
      <th>Estimated margin</th>
      <th>Estimated revenue</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @offices.each do |office| %>
      <tr>
        <td><%= link_to office.name, office_path(office) %></td>
        <td><%= office_current_budget(office) %></td>
        <td><%= office_margin(office) %></td>
        <td><%= office_revenue(office) %></td>
        <td><%= office_pipeline_margin(office) %></td>
        <td><%= office_pipeline_revenue(office) %></td>
        <td><%= office_pipeline_margin(office) + office_margin(office) %></td>
        <td><%= office_pipeline_revenue(office) + office_revenue(office) %></td>
        <td><%= link_to 'Show', office %></td>
        <td><%= link_to 'Edit', edit_office_path(office) %></td>
        <td><%= link_to 'Destroy', office, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

