<%= render 'menu' %>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Seller</th>
        <th>Client</th>
        <th>Date</th>
        <th>Margin</th>
        <th>Revenue</th>
        <th>State</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @sales.each do |sale| %>
        <tr>
          <td><%= sale.id %></td>
          <td><%= empl(sale.user) %></td>
          <td><%= client(sale.client) %></td>
          <td><%= sale_date(sale) %></td>
          <td><%= currency(sale.margin) %></td>
          <td><%= currency(sale.revenue) %></td>
          <td><span class="label label-default">Waiting...</span></td>
          <td>
            <div class="btn-group btn-group-xs">
              <a href="#" class="btn btn-primary btn-xs">Approve</a>
              <a href="#" class="btn btn-danger btn-xs">Decline</a>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>