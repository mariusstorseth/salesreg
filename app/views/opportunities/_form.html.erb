<script>
    $(document).ready(function() { $(".select-search").select2(); });
</script>
<%= simple_form_for(@opportunity, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @opportunity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@opportunity.errors.count, "error") %> prohibited this opportunity from being saved:</h2>

      <ul>
      <% @opportunity.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :client_id, "Client", :class => "col-md-3 control-label" %>
    <div class="col-md-9">
      <%= f.input_field :client_id, collection: Client.all, label_method: :name, :class => "select-search" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :user_id, "User", :class => "col-md-3 control-label" %>
    <div class="col-md-9">
      <%= f.input_field :user_id, collection: User.all, label_method: :full_name, :class => "select-search" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :software, :class => "col-md-3 control-label" %>
    <div class="col-md-9">
      <%= f.input_field :software, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :semi, :class => "col-md-3 control-label" %>
    <div class="col-md-9">
      <%= f.input_field :semi, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :production, :class => "col-md-3 control-label" %>
    <div class="col-md-9">
      <%= f.input_field :production, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :ads, :class => "col-md-3 control-label" %>
    <div class="col-md-9">
      <%= f.input_field :ads, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :other, :class => "col-md-3 control-label" %>
    <div class="col-md-9">
      <%= f.input_field :other, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :closing_date, :class => "col-md-3 control-label" %>
    <div class="col-md-9">
      <%= f.date_field :closing_date, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :probability, :class => "col-md-3 control-label" %>
    <div class="col-md-9">
      <%= f.input_field :probability, :class => "form-control" %>
    </div>
  </div>

  <div class="col-sm-offset-3 col-md-9">
    <%= f.submit "Submit", :class => "btn btn-primary" %>
  </div>
<% end %>
