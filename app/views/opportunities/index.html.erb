<h1>Listing opportunities</h1>


<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Seller</th>
      <th>Software</th>
      <th>Semi</th>
      <th>Production</th>
      <th>Ads</th>
      <th>Other</th>
      <th>Total margin</th>
      <th>Total revenue</th>
      <th>Weighted margin</th>
      <th>Weighted revenue</th>
      <th>Closing date</th>
      <th>Probability</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @opportunities.each do |opportunity| %>
      <tr>
        <td><%= opportunity.client.name %></td>
        <td><%= empl(opportunity.user) %></td>
        <td><%= opportunity.software %></td>
        <td><%= opportunity.semi %></td>
        <td><%= opportunity.production %></td>
        <td><%= opportunity.ads %></td>
        <td><%= opportunity.other %></td>
        <td><strong><%= opportunity.total_margin %></strong></td>
        <td><strong><%= opportunity.total_revenue %></strong></td>
        <td><strong><%= opportunity.weighted_margin %></strong></td>
        <td><strong><%= opportunity.weighted_revenue %></strong></td>
        <td><%= opportunity.closing_date %></td>
        <td><%= opportunity.probability %></td>
        <td><%= link_to 'Show', opportunity %></td>
        <td><%= link_to 'Edit', edit_opportunity_path(opportunity) %></td>
        <td><%= link_to 'Destroy', opportunity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

